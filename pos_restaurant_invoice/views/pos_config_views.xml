<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="inherit_view_pos_config_reports">
        <field name="name">pos.config.form.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='title']" position='after'>
                <div class="row mt16 o_settings_container" name="pos_z_report_second">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="enable_auto_invoice"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="enable_auto_invoice"/>
                    </div>
                </div>
                 <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="automatic_invoice_printing"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="automatic_invoice_printing"/>
                    </div>
                </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
